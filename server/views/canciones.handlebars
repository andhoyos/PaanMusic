                    <p class="track" id="{{this.id}}" onclick="fileName({{this.id}})">{{this.track}}</p>
                    <p class="track" id="up{{this.id}}" style="display: none;">{{this.uploadBy}}</p>
                </li>
            </div>
            {{/each}}
        </ul>
    </div>
    <div id="contentAudio">
        <div class="infoTrack">
            <p id="audioRep"></p>
